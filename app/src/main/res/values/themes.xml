<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoMECAREFoundation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:windowBackground">@color/colorBackground</item>

    </style>

    <style name="Theme.FullScreen" parent="Theme.MoMECAREFoundation">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/primary_button_states</item>
        <item name="android:textColor">@color/primary_color_states</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonRoundedStyle" parent="MaterialTextButtonStyle">
        <item name="android:bottomLeftRadius">@dimen/corner_radius</item>
        <item name="android:bottomRightRadius">@dimen/corner_radius</item>
        <item name="android:topLeftRadius">@dimen/corner_radius</item>
        <item name="android:topRightRadius">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <!-- style for material text input-->
    <style name="MaterialTextTextInputRoundedStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:bottomLeftRadius">@dimen/corner_radius</item>
        <item name="android:bottomRightRadius">@dimen/corner_radius</item>
        <item name="android:topLeftRadius">@dimen/corner_radius</item>
        <item name="android:topRightRadius">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
    </style>

    <!--    the card properties and style-->
    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/negative_item_margin</item>
        <item name="android:layout_marginRight">@dimen/negative_item_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--    the card properties and style-->
    <style name="BaseCardViewStyle" parent="MaterialCardViewStyle">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/negative_item_margin</item>
        <item name="android:layout_marginRight">@dimen/negative_item_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightDark</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
    </style>

    <!--    the group button style-->
    <style name="GroupOutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerSize">2dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--    the group button style-->
    <style name="GroupOutlineButtonStyleDark" parent="GroupOutlineButtonStyle">
        <item name="strokeColor">@color/colorLightDark</item>
        <item name="android:textColor">@color/colorLightDark</item>
    </style>


</resources>